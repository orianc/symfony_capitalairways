{% extends 'base.html.twig' %}

{% block title %}Flight
{% endblock %}

{% block body %}

	<div class="container bg-light rounded py-3">
		<h1 class="text-center">Flight</h1>
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ flight.id }}</td>
				</tr>
				<tr>
					<th>Numero</th>
					<td>{{ flight.numero }}</td>
				</tr>
				<tr>
					<th>Schedule</th>
					<td>{{ flight.schedule ? flight.schedule|date('H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ flight.price }}</td>
				</tr>
				<tr>
					<th>Reduction</th>
					<td>{{ flight.reduction ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Seat</th>
					<td>{{ flight.seat }}</td>
				</tr>
				<tr>
					<th>Departure</th>
					<td>{{ flight.departure.name }}</td>
				</tr>
				<tr>
					<th>Arrival</th>
					<td>{{ flight.arrival.name }}</td>
				</tr>

			</tbody>
		</table>
		<a href="{{ path('flight_index') }}" class="btn btn-primary">Back to list</a>

		<a href="{{ path('flight_edit', {'id': flight.id}) }}" class="btn btn-warning text-white">Edit</a>
		{{ include('flight/_delete_form.html.twig') }}
	</div>


{% endblock %}
